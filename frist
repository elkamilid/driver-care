    <a href="https://wa.me/6281556444412?text=Halo%20Driver%20Care,%20saya%20ingin%20bertanya%20tentang%20layanan%20driver" class="whatsapp-float" target="_blank">
        <i class="fab fa-whatsapp"></i>
    </a>

    <!-- ===== SWIPER JS ===== -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
    
    <script>
        // Inisialisasi Swiper Slider
        const swiper = new Swiper('.swiper', {
            direction: 'horizontal',
            loop: true,
            speed: 800,
            autoplay: {
                delay: 5000,
                disableOnInteraction: false,
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
        });
        
        // Hamburger Menu Toggle
        const hamburgerMenu = document.getElementById('hamburgerMenu');
        const mainMenu = document.getElementById('mainMenu');
        
        hamburgerMenu.addEventListener('click', () => {
            hamburgerMenu.classList.toggle('active');
            mainMenu.classList.toggle('active');
        });
        
        // Tutup menu mobile saat klik di luar
        document.addEventListener('click', (e) => {
            if (!mainMenu.contains(e.target) && !hamburgerMenu.contains(e.target)) {
                hamburgerMenu.classList.remove('active');
                mainMenu.classList.remove('active');
            }
        });
        
        // Pilih Layanan
        const serviceButtons = document.querySelectorAll('.select-service');
        const serviceTypeInput = document.getElementById('serviceType');
        const durationInput = document.getElementById('duration');
        const durationHelp = document.getElementById('durationHelp');
        
        serviceButtons.forEach(button => {
            button.addEventListener('click', () => {
                const service = button.getAttribute('data-service');
                
                // Set nilai input layanan
                serviceTypeInput.value = service;
                
                // Update durasi minimum berdasarkan layanan
                if (service === 'Dalam Kota' || service === 'Paket Silver') {
                    durationInput.min = 4;
                    durationInput.value = 4;
                    durationHelp.textContent = 'Minimal 4 jam untuk layanan dalam kota';
                } else {
                    durationInput.min = 8;
                    durationInput.value = 8;
                    durationHelp.textContent = 'Minimal 8 jam untuk layanan luar kota';
                }
                
                // Scroll ke formulir
                document.getElementById('order').scrollIntoView({ behavior: 'smooth' });
                
                // Highlight layanan yang dipilih
                serviceButtons.forEach(btn => {
                    btn.classList.remove('btn-secondary');
                    btn.classList.add('btn');
                });
                
                button.classList.remove('btn');
                button.classList.add('btn-secondary');
            });
        });
        
        // Form Submission ke WhatsApp
        const orderForm = document.getElementById('orderForm');
        
        orderForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            // Validasi layanan dipilih
            if (!serviceTypeInput.value) {
                alert('Silakan pilih jenis layanan atau paket terlebih dahulu');
                return;
            }
            
            // Validasi durasi
            const serviceType = serviceTypeInput.value;
            const duration = parseInt(durationInput.value);
            
            if ((serviceType === 'Dalam Kota' || serviceType === 'Paket Silver') && duration < 4) {
                alert('Durasi minimal untuk layanan dalam kota adalah 4 jam');
                return;
            }
            
            if ((serviceType === 'Luar Kota' || serviceType === 'Paket Gold' || serviceType === 'Paket Platinum') && duration < 8) {
                alert('Durasi minimal untuk layanan luar kota adalah 8 jam');
                return;
            }
            
            // Ambil data dari form
            const name = document.getElementById('name').value;
            const phone = document.getElementById('phone').value;
            const email = document.getElementById('email').value;
            const date = document.getElementById('date').value;
            const pickup = document.getElementById('pickup').value;
            const destination = document.getElementById('destination').value;
            const ownCar = document.querySelector('input[name="ownCar"]:checked').value;
            const notes = document.getElementById('notes').value;
            
            // Format tanggal
            const formattedDate = new Date(date).toLocaleDateString('id-ID', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
            
            // Hitung harga berdasarkan paket
            let price = 0;
            if (serviceType === 'Dalam Kota' || serviceType === 'Paket Silver') {
                price = 150000;
                if (duration > 4) {
                    price += (duration - 4) * 30000;
                }
            } else if (serviceType === 'Luar Kota' || serviceType === 'Paket Gold') {
                price = 400000;
                if (duration > 8) {
                    price += (duration - 8) * 50000;
                }
            } else if (serviceType === 'Paket Platinum') {
                price = 750000;
                if (duration > 12) {
                    price += (duration - 12) * 60000;
                }
            }
            
            // Format harga
            const formattedPrice = new Intl.NumberFormat('id-ID', {
                style: 'currency',
                currency: 'IDR'
            }).format(price);
            
            // Buat pesan untuk WhatsApp
            const whatsappMessage = 
                `Halo Driver Care, saya ingin memesan layanan driver dengan detail berikut:\n\n` +
                `*Jenis Layanan:* ${serviceType}\n` +
                `*Nama Pemesan:* ${name}\n` +
                `*Nomor WhatsApp:* ${phone}\n` +
                `*Email:* ${email}\n` +
                `*Tanggal Pemesanan:* ${formattedDate}\n` +
                `*Durasi:* ${duration} jam\n` +
                `*Lokasi Penjemputan:* ${pickup}\n` +
                `*Tujuan:* ${destination}\n` +
                `*Kendaraan Pribadi:* ${ownCar}\n` +
                `*Perkiraan Biaya:* ${formattedPrice}\n` +
                `*Catatan Tambahan:* ${notes || 'Tidak ada'}\n\n` +
                `Silakan konfirmasi ketersediaan driver untuk tanggal tersebut.`;
            
            // Encode pesan untuk URL
            const encodedMessage = encodeURIComponent(whatsappMessage);
            
            // Nomor WhatsApp tujuan (ganti dengan nomor Anda)
            const whatsappNumber = "6281556444412";
            
            // Redirect ke WhatsApp
            window.open(`https://wa.me/${whatsappNumber}?text=${encodedMessage}`, '_blank');
            
            // Reset form setelah pengiriman
            setTimeout(() => {
                orderForm.reset();
                serviceTypeInput.value = '';
                serviceButtons.forEach(btn => {
                    btn.classList.remove('btn-secondary');
                    btn.classList.add('btn');
                });
                
                // Reset tanggal
                const today = new Date().toISOString().split('T')[0];
                document.getElementById('date').value = today;
            }, 1000);
        });
        
        // Set tanggal minimum untuk input tanggal
        const dateInput = document.getElementById('date');
        const today = new Date().toISOString().split('T')[0];
        dateInput.min = today;
        dateInput.value = today;
        
        // Smooth scrolling untuk navigasi
        document.querySelectorAll('nav a').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                    
                    // Update menu aktif
                    document.querySelectorAll('nav a').forEach(link => {
                        link.classList.remove('active');
                    });
                    this.classList.add('active');
                    
                    // Tutup menu mobile setelah klik
                    hamburgerMenu.classList.remove('active');
                    mainMenu.classList.remove('active');
                }
            });
        });
        
        // Highlight menu aktif saat scroll
        window.addEventListener('scroll', () => {
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('nav a');
            
            let currentSection = '';
            
            sections.forEach(section => {
                const sectionTop = section.offsetTop - 100;
                const sectionHeight = section.clientHeight;
                
                if (scrollY >= sectionTop && scrollY < sectionTop + sectionHeight) {
                    currentSection = section.getAttribute('id');
                }
            });
            
            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === `#${currentSection}`) {
                    link.classList.add('active');
                }
            });
            
            // Jika di atas semua section, aktifkan link home
            if (scrollY < 100) {
                navLinks.forEach(link => {
                    link.classList.remove('active');
                });
                document.querySelector('nav a[href="#home"]').classList.add('active');
            }
        });
        
        // Format input nomor telepon
        const phoneInput = document.getElementById('phone');
        phoneInput.addEventListener('input', function() {
            // Hapus karakter non-angka
            this.value = this.value.replace(/[^\d]/g, '');
            
            // Tambahkan kode negara jika belum ada
            if (this.value.length > 0 && !this.value.startsWith('0') && !this.value.startsWith('62')) {
                this.value = '0' + this.value;
            }
        });
    </script>
</body>
</html>
